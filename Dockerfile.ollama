FROM ollama/ollama:latest AS builder
RUN ollama serve & \
    OLLAMA_PID=$! && \
    sleep 5 && \
    ollama pull llama3 && \
    ollama pull DeepSeek-R1-Distill-Qwen-32B && \
    kill $OLLAMA_PID

FROM ollama/ollama:latest
COPY --from=builder /root/.ollama /root/.ollama
ENTRYPOINT ["ollama", "serve"]
